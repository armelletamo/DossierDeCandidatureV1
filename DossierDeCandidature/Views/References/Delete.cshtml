@model DossierDeCandidature.Models.References

<style>
    h3 {
        color: Highlight
    }

    p {
        text-align: justify;
    }

    dt {
        margin-right: 50px;
        font-size: large;
    }

    dl {
        display: inline;
    }
</style>

<br /><br /><br />

<h3 class="text-center">Êtes-vous sûr de vouloir supprimer cette référence</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomPrenom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomPrenom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fonction)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fonction)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Societe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Societe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TelMail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TelMail)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-primary" />

        </div>
    }
    @{
        int ID = (int)Session["idRenseignement"];
    }
    <div class="form-actions no-color">
        @Html.ActionLink("Retour", "Verification", "Enregistrement", new { Id = ID }, null)
    </div>
</div>
