@model DossierDeCandidature.Models.References



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>


<h2 class="text-center">REFERENCES PROFESSIONNELLES</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="champs" id="d1">
            <div class="form-group">
                <label class="control-label col-md-2">Nom/Prénom</label>
                <div class="col-md-10">
                    <input name="[0].NomPrenom" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Fonction</label>
                <div class="col-md-10">
                    <input name="[0].Fonction" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sociéte</label>
                <div class="col-md-10">
                    <input name="[0].Societe" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Tel/Mail</label>
                <div class="col-md-10">
                    <input name="[0].TelMail" class="form-control" />
                </div>
            </div>
        </div>

        <script src="~/Scripts/JavaScript.js"></script>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Suivant" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<button id="btn1" class="btn btn-default" style="background-color:darkgrey">Ajouter</button>
