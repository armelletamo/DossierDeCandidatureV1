@model DossierDeCandidature.Models.Competences



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<h2 class="text-center">PRINCIPALES COMPETENCES TECHNIQUES ET/OU FONCTIONNELLES</h2>
<br />

@using (Html.BeginForm("Create", "Competences"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="champs-competence" id="d">
        <div class="form-group">
            <label class="control-label col-md-2">Compétence</label>

            <div class="col-md-10">
                <textarea id="test" name="[0].Competence" cols="60" rows="2" class="form-control"></textarea>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Niveau</label>
            <div class="col-md-10">
                <select class="form-control text-center" name="[0].NiveauCompetence">
                    <option value=""> - Niveau - </option>
                    <option value="Debutant"> Debutant (0 à 1 an) </option>
                    <option value="Confirme">Confirmé (2 à 5 ans)</option>
                    <option value="Experimente">Expérimenté (plus de 5 ans)</option>
                </select>
            </div>
        </div>
    </div>

    <script src="~/Scripts/JavaScript.js"></script>

    <br /> <br /> <br /> <br /> <br />
    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="suivant" class="btn btn-primary" />
        </div>


    </div>
</div>
}


<button id="btn" class="btn btn-default" style="background-color:darkgrey">Ajouter</button>

