@model DossierDeCandidature.Models.Motivation


<link href="~/Content/styleMotivation.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br /><br /><br />
    <div class="form-horizontal">
        <h2 class=" text-center">MOTIVATION</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="formMotivation">

            <div class="form-group">
                <div id="question">
                    @Html.LabelFor(model => model.ExperisIt)
                </div>
                <div>
                    <textarea name="ExperisIt" cols="60" rows="6" class="form-control">@Model.ExperisIt</textarea>
                    @Html.ValidationMessageFor(model => model.ExperisIt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div id="question">
                    @Html.LabelFor(model => model.MotifRecherche)
                </div>
                <div>
                    <textarea name="MotifRecherche" cols="60" rows="6" class="form-control">@Model.MotifRecherche</textarea>
                    @Html.ValidationMessageFor(model => model.MotifRecherche, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div id="question">
                    @Html.LabelFor(model => model.Objectif)
                </div>
                <div>
                    <textarea name="Objectif" cols="60" rows="6" class="form-control">@Model.Objectif</textarea>
                    @Html.ValidationMessageFor(model => model.Objectif, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modifier" class="btn btn-primary pull-right" />
            </div>
        </div>
    </div>
}
@{
    int ID = (int)Session["idRenseignement"];
}
<div class="form-actions no-color">
    @Html.ActionLink("Retour", "Verification", "Enregistrement", new { Id = ID }, null)
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
