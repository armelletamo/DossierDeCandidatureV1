@model DossierDeCandidature.Models.Langues
<script src="~/Scripts/JavaScript.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h2 class=" text-center">LANGUES ETRANGERES</h2>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
                @Html.LabelFor(model => model.Langue, htmlAttributes: new { @class = "control-label col-md-2" })
            
            
            <div class="col-md-10" style="margin-top:7px;">
                <input name="[0].Langue" value="Anglais" style="border:hidden; background-color:transparent; color:white" readonly="readonly" />
                @Html.ValidationMessageFor(model => model.Langue, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NiveauLangue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="[0].NiveauLangue">
                    <option value="Non opérationnel"> Non opérationnel </option>
                    <option value="Opérationnel">Opérationnel</option>
                    <option value="Courant">Courant</option>
                </select>
                @Html.ValidationMessageFor(model => model.NiveauLangue, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="Champ_langue" id="l">
            <div class="form-group" style="display:inline-block">
                <label class="control-label col-md-3">Autre</label>
                <div class="col-md-9">
                    <input type="text" name="[0].Autre" class="form-control" />
                </div>
            </div>
            <div class="form-group"  style="display:inline-block">
                <label class="control-label col-md-3">Niveau </label>
                <div class="col-md-9">
                    <select class="form-control" name="[0].Niveau">
                        <option value="Non opérationnel"> Non opérationnel </option>
                        <option value="Opérationnel">Opérationnel</option>
                        <option value="Courant">Courant</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="suivant" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<button id="btnAjouterLangue" class="btn btn-default" style="background-color:darkgrey">Ajouter</button>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
